<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoThreeCliffActivity"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:scrollbars="vertical"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:elevation="10dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/info_IV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/three_cliffs_bay"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>


    <TextView
        android:gravity="center"
        android:layout_margin="4dp"
        android:id="@+id/infoHeadline_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/threeCliff"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <ScrollView

        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/large_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoThreeCliffBay"
            android:textSize="10pt"
            android:layout_gravity="center"
            android:autoLink="all"
            />

    </ScrollView>




</LinearLayout>